{
  "root": true,
  "env": {
    "es6": true,
    "jasmine": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": true
  },
  "ignorePatterns": ["projects/**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["tsconfig.json"],
        "createDefaultProgram": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@angular-eslint/recommended",
        "airbnb-base",
        "prettier"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "error",
        "import/prefer-default-export": "off",
        "comma-dangle": ["error", "always-multiline"],
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "ts": "never",
            "tsx": "never",
            "js": "never",
            "jsx": "never"
          }
        ],
        "class-methods-use-this": "off"
      },
      "settings": {
        "import/resolver": {
          "alias": {
            "extensions": [".ts", ".js", ".mjs", ".jsx", ".json"],
            "map": [["@", "./src"]]
          }
        }
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    },
    {
      "files": ["*.mjs"],
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {}
    }
  ]
}
